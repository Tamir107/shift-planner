<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".fragments.NewShiftFragment" >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Add a new shift"
        android:textColor="#0d1321"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="#0d1321"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonChooseDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Choose date"
                android:textColor="#0d1321"
                android:textSize="18sp"
                app:icon="@android:drawable/ic_menu_today"
                android:background="@drawable/btn_delete_selector"
                app:iconSize="24dp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#0d1321"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Hours:"
            android:textColor="#0d1321"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioGroupHours"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morning: 7:00 AM - 3:00 PM"
                android:textColor="#0d1321"
                android:buttonTint="#0d1321"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioEvening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evening: 3:00 PM - 11:00 PM"
                android:textColor="#0d1321"
                android:buttonTint="#0d1321"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioNight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0d1321"
                android:text="Night: 11:00 PM - 7:00 AM"
                android:buttonTint="#0d1321"
                android:textSize="20sp" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/buttonAddShift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="40dp"
        android:textColor="#0d1321"
        android:text="Add shift"
        android:background="@drawable/btn_delete_selector"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>