<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <ripple android:color="#8F8F8F"> <!-- Ripple effect color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" /> <!-- Change color when pressed -->
                    <corners android:radius="8dp" /> <!-- Rounded corners -->
                </shape>
            </item>
        </ripple>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>